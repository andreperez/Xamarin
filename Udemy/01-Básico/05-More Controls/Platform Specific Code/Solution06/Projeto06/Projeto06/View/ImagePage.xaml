<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto06.View.ImagePage">
  <StackLayout>
        <Label>
            <Label.Text>
                <OnPlatform x:TypeArguments="x:String"  Android="Olá Android!" iOS="Olá iOS!" WinPhone="Olá Windows!" />
            </Label.Text>
        </Label>
      
        <Image WidthRequest="300" HeightRequest="200" Aspect="Fill">
            <Image.Source>
                <OnPlatform x:TypeArguments="ImageSource"  Android="icon.png" iOS="photo.jpg" WinPhone="Imagens/photo.jpg" />
            </Image.Source>
        </Image>
      
    </StackLayout>
</ContentPage>